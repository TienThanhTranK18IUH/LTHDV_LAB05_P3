
<h2><%= product._id ? 'Sửa sản phẩm' : 'Thêm sản phẩm' %></h2>
<form action="<%= product._id ? '/products/' + product._id + '?_method=PUT' : '/products' %>" method="POST">
  <input type="text" name="name" placeholder="Tên" value="<%= product.name || '' %>" required>
  <input type="number" step="0.01" name="price" placeholder="Giá" value="<%= product.price || '' %>" required>
  <input type="number" name="quantity" placeholder="Số lượng" value="<%= product.quantity || 0 %>">
  <select name="supplier" required>
    <% suppliers.forEach(s => { %>
      <option value="<%= s._id %>" <%= product.supplier == s._id ? 'selected' : '' %>><%= s.name %></option>
    <% }) %>
  </select>
  <button type="submit">Lưu</button>
</form>
