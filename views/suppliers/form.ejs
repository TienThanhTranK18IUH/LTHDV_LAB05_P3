<% layout('../layout') %>
<h2><%= supplier._id ? 'Sửa' : 'Thêm' %> nhà cung cấp</h2>
<form method="POST" action="<%= supplier._id ? '/suppliers/' + supplier._id + '?_method=PUT' : '/suppliers' %>">
  <input type="text" name="name" value="<%= supplier.name || '' %>" placeholder="Tên" required>
  <input type="text" name="phone" value="<%= supplier.phone || '' %>" placeholder="SĐT">
  <input type="text" name="address" value="<%= supplier.address || '' %>" placeholder="Địa chỉ">
  <button type="submit">Lưu</button>
</form>
